{
  "name": "wogus-plugins",
  "owner": {
    "name": "94wogus",
    "email": "94wogus@quantit.io"
  },
  "metadata": {
    "description": "체계적인 개발 워크플로우를 위한 Claude Code 플러그인 모음 - 워크플로우 번들, Terraform, Amplitude, Slack, Atlassian (한국어 기본)",
    "version": "3.10.0",
    "repository": "https://github.com/94wogus-quantit/wogus-plugin",
    "homepage": "https://github.com/94wogus-quantit/wogus-plugin#readme",
    "license": "Private"
  },
  "plugins": [
    {
      "name": "workflow-bundle",
      "description": "이슈 분석 → 계획 → 실행 → 문서화 + MR 리뷰 워크플로우 (5 skills + agent + sequential-thinking)",
      "source": "./workflow-bundle",
      "strict": true,
      "skills": [
        "./analyze",
        "./plan",
        "./execute",
        "./record",
        "./mr-review"
      ],
      "agents": [
        "./agents/requirement-validator.md"
      ],
      "mcpServers": {
        "sequential-thinking": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
        }
      }
    },
    {
      "name": "terraform",
      "description": "Terraform 인프라 관리 MCP 서버",
      "source": "./terraform",
      "mcpServers": {
        "terraform": {
          "type": "stdio",
          "command": "docker",
          "args": [
            "run",
            "-i",
            "--rm",
            "hashicorp/terraform-mcp-server"
          ]
        }
      }
    },
    {
      "name": "amplitude",
      "description": "Amplitude 분석 데이터 MCP 서버",
      "source": "./amplitude",
      "mcpServers": {
        "amplitude": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "amplitude-mcp-server",
            "--api-key",
            "${AMPLITUDE_API_KEY:-}"
          ]
        }
      }
    },
    {
      "name": "slack",
      "description": "Slack 메시지 검색, 히스토리, 스레드 조회 MCP 서버",
      "source": "./slack",
      "mcpServers": {
        "slack": {
          "command": "npx",
          "args": ["-y", "slack-mcp-server@latest", "--transport", "stdio"],
          "env": {
            "SLACK_MCP_XOXB_TOKEN": "${SLACK_BOT_TOKEN:-}",
            "SLACK_MCP_ADD_MESSAGE_TOOL": "true"
          }
        }
      }
    },
    {
      "name": "atlassian",
      "description": "Jira 이슈 관리 및 Confluence 문서 연동 MCP 서버(Self-hosted 지원)",
      "source": "./atlassian",
      "mcpServers": {
        "atlassian": {
          "command": "uvx",
          "args": ["mcp-atlassian"],
          "env": {
            "JIRA_URL": "${ATLASSIAN_URL:-}",
            "JIRA_USERNAME": "${ATLASSIAN_USERNAME:-}",
            "JIRA_API_TOKEN": "${ATLASSIAN_API_TOKEN:-}",
            "CONFLUENCE_URL": "${ATLASSIAN_URL:-}/wiki",
            "CONFLUENCE_USERNAME": "${ATLASSIAN_USERNAME:-}",
            "CONFLUENCE_API_TOKEN": "${ATLASSIAN_API_TOKEN:-}"
          }
        }
      }
    }
  ]
}
